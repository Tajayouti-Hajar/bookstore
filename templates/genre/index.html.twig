{% extends 'base.html.twig' %}

{% block title %}Genres
{% endblock %}

{% block body %}
	<h1 class="turquoise" style="text-align: center;">Genres</h1>
	<table class="table">
		<thead>
			<tr>
				<th>Nom</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for genre in genres %}
				<tr>
					<td>{{ genre.nom }}</td>
					<td>
						<a class="btn btn-primary" href="{{ path('genre_show', {'id': genre.id}) }}"><i class="fas fa-eye"></i></a>
						{% if is_granted('ROLE_ADMIN') %}
							<a class="btn btn-primary" href="{{ path('genre_edit', {'id': genre.id}) }}"><i class="fas fa-edit"></i></a>
							{{ include('genre/_delete_form.html.twig') }}
						{% endif %}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">Aucun r√©sultat</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	{% if is_granted('ROLE_ADMIN') %}
		<a class="btn btn-primary" href="{{ path('genre_new') }}">Ajouter</a>
	{% endif %}
{% endblock %}
